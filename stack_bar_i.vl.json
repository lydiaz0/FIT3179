{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Number of Passengers over Years(International)",
    "anchor": "middle",
    "color": "#3C3D3E"
  },
  "background": "#f2f5f7",
  "data": {
    "url": "https://raw.githubusercontent.com/lydiaz0/FIT3179/main/overseas_arrivals_departures.csv"
  },
  "spacing": 0,
  "params": [
    {
      "name": "selection",
      "bind": {
        "input": "select",
        "options": [null, "A", "D"],
        "labels": ["Show All", "Arrival", "Depature"],
        "name": "Arrival/Depature "
      }
    }
  ],
  "hconcat": [
    {
      "transform": [
        {"filter": "datum.Year == 2019"},
        {"filter": "selection == null || datum.Type == selection"},
      {"aggregate": [{
        "op":"mean",
        "field":"Passenger (M)",
        "as":"Passenger"
      }],
      "groupby": ["Month","Year"]
      }        
      ],
      "title": {"text": "2019", "color": "#808080", "fontSize": 15},
      "layer":[{"mark": "bar",
      "encoding": {
        "y": {"field": "Month", "axis": null, "sort": []},
        "x": {
          "field": "Passenger",
          "title": "Number of Passengers",
          "axis": {"format": "s", "titleColor": "#808080"},
          "sort": "descending",
          "type":"quantitative"
        },
        "color": {"field": "Year", "legend": null},
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Month", "type": "nominal", "title": "Month"},
          {
            "field": "Passenger",
            "type": "quantitative",
            "title": "Number of Passengers",
            "format": ".0f"
          }
        ]
      }
    },
    {"mark":{"type":"text","dy":-70,"dx":-77,"font":"Ubuntu"},
    "encoding": {
      "text":{"field":"Passenger","type":"quantitative"},
      "color":{"value":"black"},
      "opacity":{
        "condition":{"test":"datum.Month == 'March'",
        "value":1},
        "value":0
      }
    }
    }
    ]},
    {
      "width": 20,
      "view": {"stroke": null},
      "mark": {"type": "text", "allign": "center", "color": "#3C3D3E","font":"Ubuntu"},
      "encoding": {
        "y": {"field": "Month", "axis": null, "sort": []},
        "text": {"field": "Month", "type": "nominal"}
      }
    },
    {
      "transform": [
        {"filter": "datum.Year == 2020"},
        {"filter": "selection == null || datum.Type == selection"},
      {"aggregate": [{
        "op":"mean",
        "field":"Passenger (M)",
        "as":"Passenger"
      }],
      "groupby": ["Month","Year"]
      }         
      ],
      "title": {"text": "2020", "color": "#808080", "fontSize": 15},
      "layer":[{"mark": "bar",
      "encoding": {
        "y": {"field": "Month", "axis": null, "sort": []},
        "x": {
          "field": "Passenger",
          "title": "Number of Passengers",
          "axis": {"format": "s", "titleColor": "#808080"},
          "scale": {"domain": [0, 2000000]},
          "type":"quantitative"
        },
        "color": {
          "field": "Year",
          "legend": null,
          "scale": {"range": ["#2174a3", "#85B8CB"]}
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal", "title": "Year"},
          {"field": "Month", "type": "nominal", "title": "Month"},
          {
            "field": "Passenger",
            "type": "quantitative",
            "title": "Number of Passengers",
            "format": ".0f"
          }
        ]
      }
    },
    {"mark":{"type":"text","dy":-70,"dx":10,"font":"Ubuntu"},
    "encoding": {
      "text":{"field":"Passenger","type":"quantitative"},
      "color":{"value":"black"},
      "opacity":{
        "condition":{"test":"datum.Month == 'March'",
        "value":1},
        "value":0
      }
    }
    }]}    
  ],
  "config": {
    "view": {"stroke": null},
    "axis":{"labelFont":"Ubuntu",
    "titleFont":"Ubuntu"},
    "legend": {
      "labelFont":"Ubuntu",
      "titleFont":"Ubuntu"
    },
    "header":{
      "labelFont":"Ubuntu",
      "titleFont":"Ubuntu"
    },
    "title":{
      "font":"Ubuntu",
      "fontSize":16,
      "fontWeight":500
    }
    }
}
