{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height: "500",
  "title": {
    "text": "Australia Domestic Airlines in 2019",
    "color": "#3C3D3E"
  },
  "background":"#f2f5f7",
  "params": [
    {
      "name": "Passenger_above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 200000,
        "step": 10000,
        "name": "Minimum Passenger: "
      }
    },
    {
      "name": "zoom_level",
      "value": 650,
      "bind": {
        "input": "range",
        "min": 500,
        "max": 2000,
        "step": 50,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [134, -25.61],
      "bind": {
        "input": "select",
        "options": [
          [145, -37.95],
          [151, -33.86],
          [153, -27.47],
          [153, -28],
          [139, -34.93]
        ],
        "labels": ["Melbourne", "Sydney", "Brisbane", "Gold Coast", "Adelaide"],
        "name": "Center to: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lydiaz0/FIT3179/main/aus.geo%20topo.json",
        "format": {"type": "topojson", "feature": "aus.geo"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lydiaz0/FIT3179/main/airline1.csv"
      },
      "transform": [
        {"filter": "datum.Year == 2019"},
        {"filter": "datum.Passenger_Trips > Passenger_above"}
      ],
      "mark": {"type": "rule", "color": "#A6A5A4"},
      "encoding": {
        "longitude": {"field": "dep longitude", "type": "quantitative"},
        "latitude": {"field": "dep latitude", "type": "quantitative"},
        "longitude2": {"field": "arr longitude"},
        "latitude2": {"field": "arr latitude"},
        "tooltip": [
          {"field": "Year", "type": "nominal", "title": "Travel time"},
          {"field": "City1", "type": "nominal", "title": "Depature City"},
          {"field": "City2", "type": "nominal", "title": "Arrival City"},
          {
            "field": "Passenger_Trips",
            "type": "quantitative",
            "aggregate": "mean",
            "title": "Average Number of Passengers",
            "format": ".0f"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lydiaz0/FIT3179/main/airline1.csv"
      },
      "transform": [
        {"filter": "datum.Year == 2019"},
        {"filter": "datum.Passenger_Trips > Passenger_above"}
      ],
      "mark": {"type": "circle", "color": "#2174a3"},
      "encoding": {
        "longitude": {"field": "dep longitude", "type": "quantitative"},
        "latitude": {"field": "dep latitude", "type": "quantitative"},
        "size": {
          "field": "Passenger_Trips",
          "type": "quantitative",
          "aggregate": "average",
          "title": "Average Number of Passengers",
          "scale": {
            "type": "threshold",
            "domain": [10000, 50000, 100000],
            "range": [50, 100, 200, 300]
          }
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/lydiaz0/FIT3179/main/airline1.csv"
      },
      "transform": [
        {"filter": "datum.Year == 2019"},
        {"filter": "datum.Passenger_Trips > Passenger_above"}
      ],
      "mark": {"type": "circle", "color": "#2174a3"},
      "encoding": {
        "longitude": {"field": "arr longitude", "type": "quantitative"},
        "latitude": {"field": "arr latitude", "type": "quantitative"},
        "size": {
          "field": "Passenger_Trips",
          "type": "quantitative",
          "aggregate": "average",
          "scale": {
            "type": "threshold",
            "domain": [10000, 50000, 100000],
            "range": [50, 100, 200, 300]
          }
        }
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis":{"labelFont":"Ubuntu",
    "titleFont":"Ubuntu"},
    "legend": {
      "labelFont":"Ubuntu",
      "titleFont":"Ubuntu"
    },
    "header":{
      "labelFont":"Ubuntu",
      "titleFont":"Ubuntu"
    },
    "title":{
      "font":"Ubuntu",
      "fontSize":16,
      "fontWeight":500
    }    
  }
}
